hostname {{ hostname }}

hw-module enable acl-counters 
hw-module enable acl-default 

interface {{ host_int }}
  ipv4 address {{ host_ip }}/22
  vrf mgmt-intf
exit
{% for interfaces in int.to_phys1.interface %}interface {{ interfaces }}
  load-interval 20
exit
{% endfor %}{% for interfaces in int.to_phys2.interface %}interface {{ interfaces }}
  load-interval 20
exit
{% endfor %}interface {{ int.lo.interface }}
exit

vrf mgmt-intf 
  rd 0:0
exit

ntp vrf mgmt-intf 
  server 192.168.16.89 
  exit
exit

router static 
  vrf mgmt-intf 
    address-family ipv4 unicast 
      destination 192.168.0.0/16 192.168.16.1 
      exit
      destination 192.168.32.0/20 192.168.16.1 
      exit
    exit
  exit
exit

